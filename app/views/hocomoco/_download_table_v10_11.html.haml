%table.downloads
  %thead
    -if skip_dinucleotide
      %tr
        %th{colspan: 2}
        %th Human mononucleotide
        %th Mouse mononucleotide
    -else
      %tr
        %th{rowspan: 2, colspan: 2}
        %th{colspan: 2} Human
        %th{colspan: 2} Mouse
      %tr
        %th Mononucleotide
        %th Dinucleotide
        %th Mononucleotide
        %th Dinucleotide
  %tbody
    %tr
      %td.row-hdr{colspan: 2} Complete model annotation (including gene id mapping)
      %td= link_to 'annotation_HUMAN_mono.tsv', bundle_url.call("HUMAN/mono/#{hocomoco_prefix}annotation_HUMAN_mono.tsv")
      -unless skip_dinucleotide
        %td= link_to 'annotation_HUMAN_di.tsv',   bundle_url.call("HUMAN/di/#{hocomoco_prefix}annotation_HUMAN_di.tsv")
      %td= link_to 'annotation_MOUSE_mono.tsv', bundle_url.call("MOUSE/mono/#{hocomoco_prefix}annotation_MOUSE_mono.tsv")
      -unless skip_dinucleotide
        %td= link_to 'annotation_MOUSE_di.tsv',   bundle_url.call("MOUSE/di/#{hocomoco_prefix}annotation_MOUSE_di.tsv")

    %tr
      %td.row-hdr{rowspan: 2}
        PWM
        = help_icon(title: 'See technical notes (click to open)', href: technical_notes_url)
      %td.row-hdr
        One file per matrix
        = help_icon(title: 'MACRO-PERFECTOS-APE compatible format')
      %td= link_to 'pwm_HUMAN_mono.tar.gz', bundle_url.call("HUMAN/mono/#{hocomoco_prefix}pwm_HUMAN_mono.tar.gz")
      -unless skip_dinucleotide
        %td= link_to 'pwm_HUMAN_di.tar.gz',   bundle_url.call("HUMAN/di/#{hocomoco_prefix}pwm_HUMAN_di.tar.gz")
      %td= link_to 'pwm_MOUSE_mono.tar.gz', bundle_url.call("MOUSE/mono/#{hocomoco_prefix}pwm_MOUSE_mono.tar.gz")
      -unless skip_dinucleotide
        %td= link_to 'pwm_MOUSE_di.tar.gz',   bundle_url.call("MOUSE/di/#{hocomoco_prefix}pwm_MOUSE_di.tar.gz")
    %tr
      %td.row-hdr Flat file
      %td= link_to 'pwms_HUMAN_mono.txt', bundle_url.call("HUMAN/mono/#{hocomoco_prefix}pwms_HUMAN_mono.txt")
      -unless skip_dinucleotide
        %td= link_to 'pwms_HUMAN_di.txt',   bundle_url.call("HUMAN/di/#{hocomoco_prefix}pwms_HUMAN_di.txt")
      %td= link_to 'pwms_MOUSE_mono.txt', bundle_url.call("MOUSE/mono/#{hocomoco_prefix}pwms_MOUSE_mono.txt")
      -unless skip_dinucleotide
        %td= link_to 'pwms_MOUSE_di.txt',   bundle_url.call("MOUSE/di/#{hocomoco_prefix}pwms_MOUSE_di.txt")

    %tr
      %td.row-hdr{rowspan: 2} PCM
      %td.row-hdr
        One file per matrix
        = help_icon(title: 'MACRO-PERFECTOS-APE compatible format')
      %td= link_to 'pcm_HUMAN_mono.tar.gz', bundle_url.call("HUMAN/mono/#{hocomoco_prefix}pcm_HUMAN_mono.tar.gz")
      -unless skip_dinucleotide
        %td= link_to 'pcm_HUMAN_di.tar.gz',   bundle_url.call("HUMAN/di/#{hocomoco_prefix}pcm_HUMAN_di.tar.gz")
      %td= link_to 'pcm_MOUSE_mono.tar.gz', bundle_url.call("MOUSE/mono/#{hocomoco_prefix}pcm_MOUSE_mono.tar.gz")
      -unless skip_dinucleotide
        %td= link_to 'pcm_MOUSE_di.tar.gz',   bundle_url.call("MOUSE/di/#{hocomoco_prefix}pcm_MOUSE_di.tar.gz")
    %tr
      %td.row-hdr Flat file
      %td= link_to 'pcms_HUMAN_mono.txt', bundle_url.call("HUMAN/mono/#{hocomoco_prefix}pcms_HUMAN_mono.txt")
      -unless skip_dinucleotide
        %td= link_to 'pcms_HUMAN_di.txt',   bundle_url.call("HUMAN/di/#{hocomoco_prefix}pcms_HUMAN_di.txt")
