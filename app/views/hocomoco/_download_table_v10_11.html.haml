      -unless skip_dinucleotide
        %td= link_to 'thresholds_HUMAN_di.tar.gz',   bundle_url.call("HUMAN/di/#{hocomoco_prefix}thresholds_HUMAN_di.tar.gz")
      %td= link_to 'thresholds_MOUSE_mono.tar.gz', bundle_url.call("MOUSE/mono/#{hocomoco_prefix}thresholds_MOUSE_mono.tar.gz")
      -unless skip_dinucleotide
        %td= link_to 'thresholds_MOUSE_di.tar.gz',   bundle_url.call("MOUSE/di/#{hocomoco_prefix}thresholds_MOUSE_di.tar.gz")
    %tr
      %td.row-hdr{colspan: 2} Sequence LOGOs
      %td= link_to 'logo_HUMAN_mono.tar.gz', bundle_url.call("HUMAN/mono/#{hocomoco_prefix}logo_HUMAN_mono.tar.gz")
