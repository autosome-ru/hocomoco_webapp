      %td= link_to 'logo_MOUSE_mono.tar.gz', bundle_url.call("MOUSE/mono/#{hocomoco_prefix}logo_MOUSE_mono.tar.gz")
      -unless skip_dinucleotide
        %td= link_to 'logo_MOUSE_di.tar.gz',   bundle_url.call("MOUSE/di/#{hocomoco_prefix}logo_MOUSE_di.tar.gz")

    %tr
      %td.row-hdr{rowspan: 4} Matrices in other formats
      %td.row-hdr JASPAR
      %td= link_to "H#{hocomoco_version_number}_HUMAN_mono_jaspar_format.txt", bundle_url.call("HUMAN/mono/#{hocomoco_prefix}HUMAN_mono_jaspar_format.txt")
      -unless skip_dinucleotide
        %td
      %td= link_to "H#{hocomoco_version_number}_MOUSE_mono_jaspar_format.txt", bundle_url.call("MOUSE/mono/#{hocomoco_prefix}MOUSE_mono_jaspar_format.txt")
      -unless skip_dinucleotide
        %td
    %tr
      %td.row-hdr MEME
      %td= link_to "H#{hocomoco_version_number}_HUMAN_mono_meme_format.meme", bundle_url.call("HUMAN/mono/#{hocomoco_prefix}HUMAN_mono_meme_format.meme")
      -unless skip_dinucleotide
        %td
      %td= link_to "H#{hocomoco_version_number}_MOUSE_mono_meme_format.meme", bundle_url.call("MOUSE/mono/#{hocomoco_prefix}MOUSE_mono_meme_format.meme")
      -unless skip_dinucleotide
        %td
    %tr
      %td.row-hdr TRANSFAC
      %td= link_to "H#{hocomoco_version_number}_HUMAN_mono_transfac_format.txt", bundle_url.call("HUMAN/mono/#{hocomoco_prefix}HUMAN_mono_transfac_format.txt")
      -unless skip_dinucleotide
        %td
      %td= link_to "H#{hocomoco_version_number}_MOUSE_mono_transfac_format.txt", bundle_url.call("MOUSE/mono/#{hocomoco_prefix}MOUSE_mono_transfac_format.txt")
      -unless skip_dinucleotide
        %td
    %tr
      %td.row-hdr
        HOMER
        = help_icon(title: 'Matrices in HOMER format include score thresholds. We provide the collection with threshold levels corresponding to P-value of 0.001, 0.0005 and 0.0001')
      %td
        - ['0.001', '0.0005', '0.0001'].each do |pvalue|
          .homer_pvalue= link_to "P-value #{pvalue}", bundle_url.call("HUMAN/mono/#{hocomoco_prefix}HUMAN_mono_homer_format_#{pvalue}.motif")
      -unless skip_dinucleotide
        %td
