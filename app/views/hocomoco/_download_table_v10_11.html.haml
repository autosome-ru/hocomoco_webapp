      -unless skip_dinucleotide
        %td= link_to 'pcms_MOUSE_di.txt',   bundle_url.call("MOUSE/di/#{hocomoco_prefix}pcms_MOUSE_di.txt")

    %tr
      %td.row-hdr{colspan: 2} Alignments
      %td= link_to 'words_HUMAN_mono.tar.gz', bundle_url.call("HUMAN/mono/#{hocomoco_prefix}words_HUMAN_mono.tar.gz")
      -unless skip_dinucleotide
        %td= link_to 'words_HUMAN_di.tar.gz',   bundle_url.call("HUMAN/di/#{hocomoco_prefix}words_HUMAN_di.tar.gz")
