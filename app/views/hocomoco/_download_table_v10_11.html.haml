      -unless skip_dinucleotide
        %td= link_to 'words_MOUSE_di.tar.gz',   bundle_url.call("MOUSE/di/#{hocomoco_prefix}words_MOUSE_di.tar.gz")
    %tr
      %td.row-hdr{colspan: 2} Standard thresholds
      %td= link_to 'standard_thresholds_HUMAN_mono.txt', bundle_url.call("HUMAN/mono/#{hocomoco_prefix}standard_thresholds_HUMAN_mono.txt")
      -unless skip_dinucleotide
        %td= link_to 'standard_thresholds_HUMAN_di.txt',   bundle_url.call("HUMAN/di/#{hocomoco_prefix}standard_thresholds_HUMAN_di.txt")
      %td= link_to 'standard_thresholds_MOUSE_mono.txt', bundle_url.call("MOUSE/mono/#{hocomoco_prefix}standard_thresholds_MOUSE_mono.txt")
      -unless skip_dinucleotide
        %td= link_to 'standard_thresholds_MOUSE_di.txt',   bundle_url.call("MOUSE/di/#{hocomoco_prefix}standard_thresholds_MOUSE_di.txt")
    %tr
      %td.row-hdr{colspan: 2}
        Threshold to P-value map
